
@{
    Layout = null;
}
<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>MVC Hotels Kayıt Ol</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Erkan Bostan, MVC Hotels, Hotel Otomasyonu" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link rel="stylesheet" href="~/HotelTemalar/AccountRegister/css/style.css" type="text/css" media="all" /> <!-- Style-CSS -->
    <link rel="stylesheet" href="~/HotelTemalar/AccountRegister/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->
    <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
</head>
<body>
    <div class="w3ls-header">
        <h1>Hotel Misafir Kayıt Sayfası</h1>
        <div class="header-main">
            <h2>Yeni Hesap OluStur</h2>
            @if (ViewBag.kayit != null)
            {
                <div class="alert alert-success">
                    @ViewBag.kayit
                </div>
                <br />
            }
            <div class="header-bottom">
                <div class="header-right w3agile">
                    <div class="header-left-bottom agileinfo">
                        <form action="~/Login/KayitOl/" method="post">
                            <div class="icon1">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <input type="text" placeholder="İsim" name="İsim" required="" />
                            </div>
                            <div class="icon1">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <input type="email" placeholder="Email" name="Email" required="" />
                            </div>
                            <div class="icon1">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <input type="tel" placeholder="Telefon Numarası" name="Telefon" required="" />
                            </div>
                            <div class="icon1">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                                <input type="password" placeholder="Parola" name="Parola" required="" />
                            </div>
                            <div class="bottom">
                                <input type="submit" value="Kayıt Ol" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright">
        <p>© 2022 Hotel Kayıt Form. All rights reserved | Design by  <a href="http://erkanbostan.com/" target="_blank">  Erkan Bostan </a></p>
    </div>
</body>
</html>