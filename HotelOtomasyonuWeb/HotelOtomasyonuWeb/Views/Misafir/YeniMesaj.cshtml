@model HotelOtomasyonuWeb.Models.Entity.TKMesajSite
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/Misafir.cshtml";
}

<h2>Yeni Mesaj İşlemi</h2>
<br />
<div>
    @using (Html.BeginForm("YeniMesaj", "Misafir", FormMethod.Post))
    {
        <label>Alıcı Bilgisi</label>
        @Html.TextBoxFor(b => b.Alici, new { @class = "form-control" })
        <br />
        <label>Mesaj Konusu</label>
        @Html.TextBoxFor(b => b.Konu, new { @class = "form-control" })
        <br />
        <label>Mesaj İçeriği</label>
        @Html.TextAreaFor(b => b.Mesaj, 6, 20, new { @class = "form-control" })
        <br />
        <br />
        <input type="submit" class="btn btn-success" value="Mesajı Gönder"/>
    }
</div>


